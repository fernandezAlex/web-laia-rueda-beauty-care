.row.proximos-viajes
        each treatment in treatments
            .col-md-6.col-lg-4.mb-4.mt-4
                .card
                    img.card-img-top(src=`img/tratamientos/${treatment.imagen}`)
                    .card-body
                        .row.border-bottom.mb-4
                            .col-md-6
                                h2= treatment.nombre
                            .col-md-6.text-right
                                h4.d-inline-block.mt-2 #{treatment.precio}
                                    svg.icon.icon-tabler.icon-tabler-currency-euro(xmlns='http://www.w3.org/2000/svg' width='26' height='26' viewbox='0 0 24 24' stroke-width='1.5' stroke='#F8CBCA' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                        path(d='M17.2 7a6 7 0 1 0 0 10')
                                        path(d='M13 10h-8m0 4h8') 
                        p= treatment.descripcion.substr(0,100) + '...'
                        a(href=`tratamientos/${treatment.nombre.replace(/\s+/g, '-').toLowerCase()}`, class="btn btn-success btn-block") Más información
